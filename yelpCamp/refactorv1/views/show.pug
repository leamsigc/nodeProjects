include partials/header.pug
.container
    h1.text-center.my-5 #{camp.name}
    .row
        .col-md-8.m-auto
            img(src=camp.img  alt="" style="width:100%; height:400px;")
    .my-5.text-center   !{camp.desc}
        h3.my-5.text-center  Comments 
        hr
        hr
    .row
        .col-md-8.m-auto
            each comment in camp.comments
                p.my-5.text-center   #{comment.text}
                small.text-center   #{comment.author}
include partials/footer.pug